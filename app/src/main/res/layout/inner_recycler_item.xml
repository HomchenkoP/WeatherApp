<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="@dimen/recycler_item_weather_icon_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/innerRecyclerItemImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_weather_icon_height"
        app:srcCompat="@drawable/ic_baseline_wb_sunny_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/innerRecyclerItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/recycler_item_padding"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="Екатеринбург" />
</LinearLayout>